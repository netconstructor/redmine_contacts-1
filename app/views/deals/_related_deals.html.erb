<table class="related_deals">   
<% related_deals.each do |deal| %>
	<tr>
		<td class="name" style="vertical-align: top;">
			<h4>
				<%= link_to deal.name, {:controller => 'deals', :action => 'show', :id => deal.id } %>
			</h4>
			<%= h number_to_currency(deal.price) %>
		</td>
	</tr>
<% end %>
</table>
